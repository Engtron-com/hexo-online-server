<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>登录</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css">
    <script src="https://cdn.bootcss.com/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"></script>
    <script src="/js/particles.js"></script>
    <style>
        html, body {
            background: #24292e;
            position: relative;
        }

        .content {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            /* border-radius: 5px; */
            /* display: flex; */
            /* background: #000000; */
            margin: auto;
            width: 18%;
            height: 19%;
        }
     
        .form-group input {
            background: #000000;
            border: none;
            color: #ffffff;
        }

        .form-group button, .form-group button:hover {
            background-color: #fad46b;
            color: #ffffff;
            width: 100%;
        }

        .form-control:focus {
            -webkit-box-shadow: none;
            box-shadow: none;
        }

        .title {
            height: 30px;
            color: #ffff;
            text-align: center;
            font-size: 17px;
        }

        input:-internal-autofill-selected {
            appearance: unset;
            background-color:  #000000 !important;
            background-image: none !important;
            color: -internal-light-dark(black, white) !important;
        }

        button:active, button:focus {
            outline: 0 !important;
            border: 0 !important;;
        }
    </style>
</head>

<body>
    <div class="content">
        <div class="title">个人博客</div>
        <form class="form-horizontal" role="form" action="/login" method="POST"
            style="padding: 10px;display: inline-block;border-radius: 10px;width: 100%;">
            <div class="form-group">
                <!-- <label for="user" class="col-sm-3 control-label">用户名</label> -->
                <div class="col-sm-12">
                    <input type="text" name="user" class="form-control" id="user" placeholder="用户名">
                </div>
            </div>
            <div class="form-group">
                <!-- <label for="password" class="col-sm-3 control-label">密码</label> -->
                <div class="col-sm-12">
                    <input type="password" name="password" class="form-control" id="password" placeholder="密码">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-default">登录</button>
                </div>
            </div>
            <div id="errAlert" class="alert alert-warning" style="display: none;">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                用户名或密码错误！
            </div>
        </form>
    </div>
    <div id="particles-js" style="display: flex;align-items: center;justify-content: center"></div>
    <script>
        particlesJS('particles-js',
            {
                "particles": {
                "number": {
                    "value": 80,
                    "density": {
                    "enable": true,
                    "value_area": 800
                    }
                },
                "color": {
                    "value": "#ffffff"
                },
                "shape": {
                    "type": "circle",
                    "stroke": {
                    "width": 0,
                    "color": "#000000"
                    },
                    "polygon": {
                    "nb_sides": 5
                    },
                    "image": {
                    "src": "img/github.svg",
                    "width": 100,
                    "height": 100
                    }
                },
                "opacity": {
                    "value": 0.5,
                    "random": false,
                    "anim": {
                    "enable": false,
                    "speed": 1,
                    "opacity_min": 0.1,
                    "sync": false
                    }
                },
                "size": {
                    "value": 5,
                    "random": true,
                    "anim": {
                    "enable": false,
                    "speed": 40,
                    "size_min": 0.1,
                    "sync": false
                    }
                },
                "line_linked": {
                    "enable": true,
                    "distance": 150,
                    "color": "#ffffff",
                    "opacity": 0.4,
                    "width": 1
                },
                "move": {
                    "enable": true,
                    "speed": 6,
                    "direction": "none",
                    "random": false,
                    "straight": false,
                    "out_mode": "out",
                    "attract": {
                    "enable": false,
                    "rotateX": 600,
                    "rotateY": 1200
                    }
                }
                },
                "interactivity": {
                "detect_on": "canvas",
                "events": {
                    "onhover": {
                    "enable": true,
                    "mode": "repulse"
                    },
                    "onclick": {
                    "enable": true,
                    "mode": "push"
                    },
                    "resize": true
                },
                "modes": {
                    "grab": {
                    "distance": 400,
                    "line_linked": {
                        "opacity": 1
                    }
                    },
                    "bubble": {
                    "distance": 400,
                    "size": 40,
                    "duration": 2,
                    "opacity": 8,
                    "speed": 3
                    },
                    "repulse": {
                    "distance": 200
                    },
                    "push": {
                    "particles_nb": 4
                    },
                    "remove": {
                    "particles_nb": 2
                    }
                }
                },
                "retina_detect": true,
                "config_demo": {
                "hide_card": false,
                "background_color": "#b61924",
                "background_image": "",
                "background_position": "50% 50%",
                "background_repeat": "no-repeat",
                "background_size": "cover"
                }
            });
    </script>
</body>

</html>